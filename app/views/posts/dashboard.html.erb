<h1>Formulario Posts</h1>
  <div class="container">
    <form action="/posts/create" method="get">
      <div class="form-group">
        <label for="title">Titulo</label>
        <input type="text" name="title" class="form-control" placeholder="Ingrese el titulo del post" id="title">
      </div>

      <div class="form-group">
        <label for="image">Imagen</label>
        <input type="url" name="image_url" class="form-control" placeholder="Ingrese la url de la imagen" id="image_url">
     </div>
  
      <div class="form-group">
        <label for="content">Contenido</label>
        <textarea name="content" class="form-control" placeholder="Ingrese el contenido del post" id="content"></textarea>
      </div>
  
      <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
  </div>